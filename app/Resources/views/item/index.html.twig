{% extends 'base.html.twig' %}

{% block body %}
    <h1>Items list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>Category</th>
                <th>Price</th>
                <th>Lbl</th>
                <th>Format</th>
                <th>Style</th>
                <th>Cover</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td><a href="{{ path('admin_item_show', { 'id': item.id }) }}">{{ item.id }}</a></td>
                <td>{{ item.designation }}</td>
                <td>{{ item.category }}</td>
                <td>{{ item.price }}</td>
                <td>{{ item.lbl }}</td>
                <td>{{ item.format }}</td>
                <td>{{ item.style }}</td>
                <td><img src="{{ asset(item.getCoverWebPath) }}" width="200px" /></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_item_show', { 'id': item.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_item_edit', { 'id': item.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_item_new') }}">Create a new item</a>
        </li>
    </ul>
{% endblock %}
