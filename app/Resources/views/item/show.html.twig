{% extends 'base.html.twig' %}

{% block body %}
    <h1>Item</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ item.designation }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ item.category }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ item.price }}</td>
            </tr>
            <tr>
                <th>Lbl</th>
                <td>{{ item.lbl }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ item.format }}</td>
            </tr>
            <tr>
                <th>Style</th>
                <td>{{ item.style }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset(item.getCoverWebPath) }}" width="200px" /></td>
            </tr>
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('admin_item_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_item_edit', { 'id': item.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
